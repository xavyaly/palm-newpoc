<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rgb_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rgbPath:"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/ed_rgb_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:text="/sdcard/palm/rgb.jpg"
        app:layout_constraintStart_toEndOf="@id/tv_rgb_path"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ir_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="irPath:"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rgb_path"/>

    <EditText
        android:id="@+id/ed_ir_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:inputType="text"
        android:text="/sdcard/palm/ir.jpg"
        app:layout_constraintStart_toEndOf="@id/tv_ir_path"
        app:layout_constraintTop_toBottomOf="@+id/ed_rgb_path" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/ed_ir_path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>